<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <script
      src="https://kit.fontawesome.com/357dd17236.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <nav>
      <div class="navbar container">
        {{#if userData}}
          {{#each userData}}
            <a href="/dashboard/{{id}}" class="logo">
              <h2>BlogApp</h2>
            </a>
          {{/each}}
        {{/if}}
        <ul class="nav-links">
          <li><a href="/auth/logout"><i
                class="fa fa-sign-out"
                aria-hidden="true"
              ></i></a></li>
        </ul>
      </div>
    </nav>
    <main>
      <div class="container">
        <h2>Add a new post:</h2>
      </div>
      <div class="container">
        {{#each blogData}}
          <form action="/editPost/{{id}}" method="POST">
            <input
              required
              type="text"
              name="title"
              class="form-control"
              placeholder="Edit title"
            />
            <textarea
              required
              name="body"
              id=""
              cols="30"
              rows="10"
              class="form-control"
              placeholder={{{body}}}
            ></textarea>
            <input type="submit" class="btn btn-submit" value="Post" />
          </form>
        {{/each}}
      </div>
    </main>
    <script src="/js/script.js"></script>
  </body>

</html>