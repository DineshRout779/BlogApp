<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <script
      src="https://kit.fontawesome.com/357dd17236.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <nav>
      <div class="navbar container">
        {{#if userData}}
          {{#each userData}}
            <a href="/dashboard/{{id}}" class="logo">
              <h2>BlogApp</h2>
            </a>
          {{/each}}
        {{/if}}
        <ul class="nav-links">
          <li><a href="/auth/logout"><i
                class="fa fa-sign-out"
                aria-hidden="true"
              ></i></a></li>
        </ul>
      </div>
    </nav>
    <main>
      <div class="container">
        <div class="profile-card">
          <div class="profile-header">
            <div class="profile-img">
              <img
                src="https://i.stack.imgur.com/l60Hf.png"
                alt="profile-image"
              />
            </div>
            <div class="profile-desc">
              {{#each userData}}
                <h3>{{name}}</h3>
                <p>{{email}}</p>
              {{/each}}
            </div>
          </div>
        </div>
        <h3 class="mt-1">All Blogs</h3>
        <div class="blog-list my-blogs">
          
          {{#if blogData}}
            {{#each blogData}}
              {{#each ../userData}}
                <div class="blog">
                  <a class="blog-name" href="/viewBlog/{{id}}/{{../id}}">
                  <div class="blog-title">
                    <h4>{{../title}}</h4>
                  </div>
                </a>
                <div class="blog-actions">
                  <a href="/edit/{{id}}/{{../id}}" class="action-btn edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
</a>
                  <a href="/delete/{{id}}/{{../id}}" class="action-btn delete"><i class="fa fa-trash-o" aria-hidden="true"></i>
</a>
                </div>
                </div>
              {{/each}}
            {{/each}}
          {{else}}
            <p>You have not created any blogs</p>
          {{/if}}
        </div>
      </div>
    </main>
    <script src="/js/script.js"></script>
  </body>

</html>