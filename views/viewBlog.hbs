<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <nav>
      <div class="navbar container">
        <a href="/dashboard" class="logo">
          <h2>NodeApp</h2>
        </a>
        <ul class="nav-links">
          <li><a href="/auth/logout" class="nav-link">Logout</a></li>
        </ul>
      </div>
    </nav>
    <main>
      <div class="container">
        {{! cards }}
        {{#each blogs}}
          <div>
            <div class="blog-title-detailed">
              <h3>{{title}}</h3>
            </div>
            <div class="blog-author-detailed">
              <a href="#">{{author}}</a>
            </div>
            <div class="blog-body-detailed">
              <p class="pre-view-detailed">{{body}}</p>
            </div>
          </div>
        {{/each}}
        {{! cards end }}
      </div>
    </main>
    <script src="/js/script.js"></script>
  </body>

</html>